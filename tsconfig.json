{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Paths */
    "baseUrl": "src",
    "paths": {
      "@ui/*": ["ui/*"],
      "@components/*": ["components/*"],
      "@widgets/*": ["widgets/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@api/*": ["api/*"],
      "@store/*": ["store/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": ["src"],
  "typeRoots": ["./types"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
